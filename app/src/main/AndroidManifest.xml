<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hoyt.pigeondb">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".pigeons.OfflineFirebase"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".pairs.BreedingTab"></activity>
        <activity android:name=".pairs.AddPair" />
        <activity android:name=".AddBreedingHistory" />
        <activity android:name=".TabbetdlayoutActivity" />
        <activity android:name=".pigeons.PigeonsTab"/>
        <activity
            android:name=".Login"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".pigeons.AddPigeon">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
    </application>

</manifest>